<h1>Staffs List</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Position</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.staff_id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.position %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Edit', edit_user_path(user) if current_user.admin? %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if current_user.admin? %></td>
        <% if current_user.position == "Android" && current_user.role == "leader" %>
          <td><%= link_to 'Edit', edit_user_path(user) if user.position == "Android" && user.role == "member" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?'} if user.position == "Android" && user.role == "member" %></td>
        <% end %>
        <% if current_user.position == "Design" && current_user.role == "leader" %>
          <td><%= link_to 'Edit', edit_user_path(user) if user.position == "Design" && user.role == "member" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?'} if user.position == "Design" && user.role == "member" %></td>
        <% end %>
        <% if current_user.position == "iOS" && current_user.role == "leader" %>
          <td><%= link_to 'Edit', edit_user_path(user) if user.position == "iOS" && user.role == "member" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?'} if user.position == "iOS" && user.role == "member" %></td>
        <% end %>
        <% if current_user.position == "Rails" && current_user.role == "leader" %>
          <td><%= link_to 'Edit', edit_user_path(user) if user.position == "Rails" && user.role == "member" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?'} if user.position == "Rails" && user.role == "member" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

